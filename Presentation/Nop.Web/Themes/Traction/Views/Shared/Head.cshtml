    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/1280.rtl.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/1024.rtl.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/mobile.rtl.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/tables.rtl.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/styles.rtl.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/slick.rtl.css");

        // SS AW: BEGIN
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/carousel-blog.rtl.css");
        // SS AW: END
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/1280.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/1024.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/480.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/mobile.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/tables.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/styles.css");
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/slick.css");
        // SS AW: BEGIN
        Html.AppendCssFileParts("~/Themes/Traction/Content/css/carousel-blog.css");
        // SS AW: END
    }

    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.ex.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/footable.min.js");

    Html.AddScriptParts(ResourceLocation.Footer, "~/Themes/Traction/Content/scripts/traction.js");

